# LLM-CostOps Environment Configuration
# Copy to .env and fill in values

# ===========================================
# REQUIRED ENVIRONMENT VARIABLES
# ===========================================

# RuVector Service (persistence layer)
# ALL cost data persisted via ruvector-service, NOT direct SQL
RUVECTOR_SERVICE_URL=https://ruvector-service-<hash>.run.app
RUVECTOR_API_KEY=

# ===========================================
# SERVICE CONFIGURATION
# ===========================================

# Platform environment
PLATFORM_ENV=dev  # dev | staging | prod

# Service identification
SERVICE_NAME=llm-costops
SERVICE_VERSION=1.0.0

# Server port (Cloud Run uses PORT env var)
PORT=8080

# ===========================================
# TELEMETRY (LLM-Observatory)
# ===========================================

TELEMETRY_ENDPOINT=https://llm-observatory-<hash>.run.app
TELEMETRY_ENABLED=true

# ===========================================
# COST CONFIGURATION
# ===========================================

# Pricing data refresh interval (ms)
PRICING_REFRESH_INTERVAL_MS=3600000

# Pricing cache TTL (ms)
PRICING_CACHE_TTL_MS=300000

# ===========================================
# BUDGET CONFIGURATION
# ===========================================

# Default budget thresholds (percentage)
BUDGET_WARNING_THRESHOLD=80
BUDGET_CRITICAL_THRESHOLD=95

# ===========================================
# FORECASTING CONFIGURATION
# ===========================================

# Default historical window for forecasts (days)
FORECAST_HISTORICAL_WINDOW_DAYS=30

# Default confidence level (percentage)
FORECAST_CONFIDENCE_LEVEL=95

# ===========================================
# LOGGING
# ===========================================

LOG_LEVEL=info  # debug | info | warn | error

# ===========================================
# GOOGLE CLOUD (auto-populated by Cloud Run)
# ===========================================

# K_SERVICE=llm-costops
# K_REVISION=llm-costops-00001
# K_CONFIGURATION=llm-costops
